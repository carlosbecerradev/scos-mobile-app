<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.cliente.HomeClienteFragment">

    <!-- TODO: Update blank fragment layout -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/purple_700">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="20dp">

            <TextView
                android:id="@+id/txt_welcome_cliente"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Bienvenido Cliente"
                android:textColor="@color/white"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tv_orden_mensaje"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:textColor="@color/white"
                android:textSize="16sp" />

            <LinearLayout
                android:id="@+id/ly_orden_block"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:background="@color/white"
                android:orientation="vertical"
                android:padding="20dp">

                <LinearLayout
                    android:id="@+id/ly_orden_codigo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textView3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/purple_700"
                        android:text="Código" />

                    <TextView
                        android:id="@+id/tv_orden_codigo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="1000" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ly_orden_fecha_creacion"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textView5"
                        android:textColor="@color/purple_700"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Fecha Y Hora de Creación" />

                    <TextView
                        android:id="@+id/tv_orden_fecha_creacion"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="2022-01-15 11:00" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ly_orden_tipo_de_incidencia"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textView7"
                        android:textColor="@color/purple_700"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Tipo de Incidencia" />

                    <TextView
                        android:id="@+id/tv_orden_tipo_de_incidencia"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="TextView" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ly_orden_descripcion"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textView9"
                        android:textColor="@color/purple_700"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Descripción del Problema" />

                    <TextView
                        android:id="@+id/tv_orden_descripciion"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Ninguno" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ly_orden_estado"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textView11"
                        android:textColor="@color/purple_700"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Estado" />

                    <TextView
                        android:id="@+id/tv_orden_estado"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="CREADA" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ly_orden_fecha_asignacion"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textView13"
                        android:textColor="@color/purple_700"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Fecha y Hora de Asignación" />

                    <TextView
                        android:id="@+id/tv_orden_fecha_asignacion"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="." />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ly_orden_fecha_llegada"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="10dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textView15"
                        android:textColor="@color/purple_700"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Fecha y Hora de Llegada" />

                    <TextView
                        android:id="@+id/tv_orden_fecha_llegada"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="." />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ly_orden_fecha_cancelacion"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="10dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textView17"
                        android:textColor="@color/purple_700"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Fecha y Hora de Cancelación" />

                    <TextView
                        android:id="@+id/tv_orden_fecha_cancelacion"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="." />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ly_orden_fecha_resolucion"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="10dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textView19"
                        android:textColor="@color/purple_700"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Fecha y Hora de Resolución" />

                    <TextView
                        android:id="@+id/tv_orden_fecha_resolucion"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="." />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ly_orden_imagen"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="6dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_orden_imagen"
                        android:textColor="@color/purple_700"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Ver imagen del Problema" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ly_orden_tecnico"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="6dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_orden_tecnico"
                        android:textColor="@color/purple_700"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Ver Datos del Técnico" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ly_orden_constancia_visita"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="6dp"
                    android:orientation="vertical">

                    <TextView
                        android:textColor="@color/purple_700"
                        android:id="@+id/tv_orden_constancia_visita"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Ver Constancia de Visita" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ly_orden_motivo_cancelacion"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="6dp"
                    android:orientation="vertical">

                    <TextView
                        android:textColor="@color/purple_700"
                        android:id="@+id/tv_orden_motivo_cancelacion"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Ver Motivo de Cancelación" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ly_orden_ubicacion"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="6dp"
                    android:orientation="vertical">

                    <TextView
                        android:textColor="@color/purple_700"
                        android:id="@+id/tv_orden_ubicacion"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Ver Ubicación del Técnico" />
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</FrameLayout>