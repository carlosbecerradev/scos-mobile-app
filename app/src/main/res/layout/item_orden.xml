<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ly_orden_block"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:background="@color/white"
        android:orientation="vertical"
        android:padding="20dp">

        <LinearLayout
            android:id="@+id/ly_orden_codigo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/purple_700"
                android:text="C贸digo" />

            <TextView
                android:id="@+id/tv_orden_codigo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="1000" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ly_orden_fecha_creacion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView5"
                android:textColor="@color/purple_700"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Fecha Y Hora de Creaci贸n" />

            <TextView
                android:id="@+id/tv_orden_fecha_creacion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="2022-01-15 11:00" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ly_orden_tipo_de_incidencia"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView7"
                android:textColor="@color/purple_700"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tipo de Incidencia" />

            <TextView
                android:id="@+id/tv_orden_tipo_de_incidencia"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="TextView" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ly_orden_descripcion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView9"
                android:textColor="@color/purple_700"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Descripci贸n del Problema" />

            <TextView
                android:id="@+id/tv_orden_descripciion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Ninguno" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ly_orden_ubicacion"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="10dp"
            android:orientation="vertical">

            <TextView
                android:textColor="@color/purple_700"
                android:id="@+id/tv_orden_ubicacion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Ver Ubicaci贸n del Cliente" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ly_orden_btn_aceptar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:id="@+id/btn_aceptar_orden"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Atender Orden" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>